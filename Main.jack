class Main {
  function void main() {
    var Game game;

    do Main.init();

    let game = Game.new(20, 10);
    do game.play();
    do game.dispose();

    do Main.destroy();

    return;
  }

  function void init() {
    do View.init();
    do Direction.init();
    do Color.init();
    return;
  }

  function void destroy() {
    do View.destroy();
    do Direction.destroy();
    do Color.destroy();
    return;
  }
}
